@page "/logout"
@inherits LogoutPage
@layout HeadlessLayout

<PageTitle>Dima - Sair</PageTitle>
<MudText Typo="Typo.h3">Finalizando sessão...</MudText>
<MudPaper Class="pa-8 mt-4">
    <div class="d-flex justify-center pb-8 pt-8">
        <img src="imgs/dima.png" alt="Dima - Controle Financeiro" width="200"/>
    </div>
    <MudAlert Severity="Severity.Info">
        <div>
            Sessão finalizada
            <MudButton Variant="Variant.Text" Href="/">
                Ir para a tela de login
            </MudButton>
        </div>
    </MudAlert>
</MudPaper>